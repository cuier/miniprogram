

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  position: fixed;
  top: 120rpx; 
  height: 860rpx;
  left: 0;
  right: 0; 
  z-index: 9999;
  margin: 40rpx 30rpx 20rpx 54rpx ;  
  background-repeat: no-repeat;
}

