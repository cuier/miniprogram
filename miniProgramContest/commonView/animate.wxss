
@-webkit-keyframes fadeIn {
    0% {
        opacity: 0
    }

    to {
        opacity: 1
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0
    }

    to {
        opacity: 1
    }
}

.weui-animate-fade-in {
    -webkit-animation:fadeIn ease .9s forwards;
    animation:fadeIn ease .9s forwards;
}

@-webkit-keyframes fadeOut {
    0% {
        opacity: 1
    }

    to {
        opacity: 0
    }
}

@keyframes fadeOut {
    0% {
        opacity: 1
    }

    to {
        opacity: 0
    }
}

.weui-animate-fade-out {
    -webkit-animation: fadeOut ease .3s forwards;
    animation: fadeOut ease .3s forwards
}