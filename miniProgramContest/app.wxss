/**app.wxss**/
/* @import 'component/compRouter.wxss'; */
page {
  display: block;
  min-height: 100%;
  background-color: #3e6ccf;
}

/*页面内边距*/

.container {
  width: 100%;
  padding-top: 40rpx;
}

.white-background {
  background-color:#fff;
}

/*主题颜色*/

.theme-color {
  color: #fff;
  background-color: #fe5e5e;
}

/*两侧边距*/

.global-margin-left {
  margin-left: 30rpx;
}

.global-margin-right {
  margin-right: 30rpx;
}

/**上边距*/

.global-margin-top {
  margin-top: 40rpx;
}

/** 下边距.*/

.global-padding-bottom {
  padding-bottom: 80rpx;
}

/**底部说明文字**/
.global-bottom-tip {
  flex: 1;
  font-size: 26rpx;
  margin: 35rpx 30rpx;
  text-align: center;
  color: #888;
}

/*单选按钮radio纵向左对齐*/

.radio-group-column {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/**radio统一样式**/
.radio-label{
  flex: 1;
  display: flex;
  align-content: center
}

.radio-self{
  display: flex;
  align-items: center;
  justify-content: center
}

/**
页面内次要描述信息，服务于收腰信息并与之关联，如列表摘要
*/

.font-14 {
  font-size: 26rpx;
  color: #888;
}
/*提交按钮*/
.global-submit-btn{
  display: flex;
  flex: 1;
  margin: 80rpx 30rpx 80rpx;
  height: 84rpx;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  color: #fff;
  background-color: #fe5e5e
}
/**分割线*/
.div-line{
  height: 1px;
  background-color: #efefef;
}
/**+++++++++++++++++++++++++表单+++++++++++++++++++++++++++++**/

/**
ex.
    <view class="form-container">
        <text class="form-title">用户名</text>
        <input class="form-input" bindinput="bindUserNameInput" placeholder="请输入用户名"
               placeholder-class="form-input-placeholder" maxlength="26" type="text"/>
    </view>
 */

.form-container {
  height: 120rpx;
  display: flex;
  padding-left: 30rpx;
  align-items: center;
  justify-content: center;
  background-color: white;
  border-radius: 30rpx;
  margin: 40rpx 60rpx;
  color: #3e6ccf
}

.form-title{
  white-space: nowrap;
  width: 170rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.form-input {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  flex: 1;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.form-input.empty, .form-input-placeholder {
  flex: 1;
  display: flex;
  align-items: center;
  color: #b2b2b2;
  font-size: 30rpx;
}

.title-area {
  padding-top: 16rpx;
  margin-bottom: 16rpx;
}
/**向右尖头*/
.navigator-arrow {
  margin-right: 30rpx;
}

.navigator-arrow:after {
  content: " ";
  display: flex;
  align-items: center;
  height: 8px;
  width: 8px;
  border-width: 2px 2px 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  transform: rotate(45deg); 
}
