/*个人信息*/
.personalBg {
  background-image: url("http://p7z7150ac.bkt.clouddn.com/rectangle.png");
  background-repeat:no-repeat;
  background-position-x:center;
  background-position-y:15px;
  padding-top: 35px;
}
.top {
  display:flex;
  align-items:center;
  color:#fff;
}
.portrait {
  padding-left: 35px;
}
.portrait image {
  width:64px;
  height:64px;
  border-radius:50px;
  border:4px solid #FFFFFF;
}

.info {
  padding-left: 20px;
}
.info .nickname {
  font-size: 40rpx;
  line-height: 30px;
  padding-bottom: 5px;
}
.info .coin {
  font-size:16px;
  background:#42068A;
  border-radius:20px;
  padding: 0px 10px 0px 3px;
}
.info .coin image {
  width: 18px;
  height: 18px;
  vertical-align: middle;
}
.info .coin text {
  vertical-align: middle;
}

.switch {
  font-size:28rpx;
  right:70rpx;
  position:absolute;
}
.sign {
  font-size:28rpx;
  right:90rpx;
  position:absolute;
}

.bottom {
  align-items: center;
  display: -webkit-box;
  display: flex;
  padding: 40rpx 120rpx 0;
  font-size: 30rpx;
  color: #ffffff;
}
.bottom .subject, .bottom .line, .bottom .article {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
}
.bottom .num {
  font-size: 60rpx;
}
.bottom .desc {
  font-size: 28rpx;
}

/*主题*/
.theme {
  background: #FFD84A;
  border: 4px solid #000000;
  border-radius: 20px;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
}
.theme .pl20 {
  padding-left: 20px;
}
.theme .pr20 {
  padding-right: 20px;
}
.theme .li {
  flex: 1;
}
.theme .li .title {
  font-size: 40rpx;
}
.theme .li .grade {
  font-size: 30rpx;
}
.theme .challenge {
  font-size: 30rpx;
}
.theme .challenge view {
  background:#ffffff;
  width:60px;
  text-align:center;
  border-radius:10px;
  line-height: 20px;
}