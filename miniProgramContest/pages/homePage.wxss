/* pages/homePage.wxss */

.my-header {
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 34rpx;
}

.headimg {
  height: 64px;
  width: 64px;
  border-radius: 50px;
  object-fit: cover;
  display: block;
  float: left;
  overflow: hidden;
}

.my-header text {
  margin-left: 20rpx;
}

.my-header view {
  display: flex;
  flex-direction: column;
}

.name {
  margin: 10rpx 40rpx !important;
  white-space: nowrap;
}

.border {
  border-radius: 20rpx;
  border-width: thick;
  border-color: black;
  border-style: solid;
}

.content view {
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 50rpx;
  font-family: helvetica;
}

.section1 {
  margin-top: 30rpx;
  height: 252rpx;
  background-color: #fbefe0;
  color: black !important;
  background-image: url("http://weiyinyue.music.sina.com.cn/movie_still/176848_1525182309799.jpg");
}

.section2 {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.section2-1 {
  display: flex;
  flex-direction: column;
  width: 320rpx;
  height: 352rpx;
  margin-top: 0rpx !important;
  background-color: #fcd93c;
  color: black !important;
}

.section2-2 {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.section2-2-1 {
  height: 150rpx;
  width: 316rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background-color: #fc9a3c;
}

.section3 {
  display: flex;
  align-items: flex-end;
  align-content: flex-end;
  flex: 1;
  margin-top: 30rpx;
  height: 144rpx;
  background-color: #ec4571;
}

.section4 {
  height: 144rpx;
  width: 316rpx;
  margin-bottom: 40rpx;
}

.section4-1 {
  background-color: #b748f1;
}

.section4-2 {
  background-color: #7541d5;
